<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add appointment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body m-auto">
                <div class="col-12 d-flex align-items-stretch">
                    <div class="icon-box">
                        <div class="icon"><img src="../Images/defaultuser.png" class="image" alt="lawyer"></div>
                        <div class="mt-3"><strong>Lawyer ID: </strong> <span id="lid"></span></div>
                        <div class="mt-1"><strong>Name: </strong> <span id="name"></span></div>
                        <div class="mt-1"><strong>Email: </strong> <span id="email"></span></div>
                        <div class="mt-1"><strong>Type: </strong> <span id="type"></span></div>
                        <div class="mt-1"><strong>Experience: </strong> <span id="experience"></span></div>
                        <div class="mt-1"><strong>Fee: </strong> <span id="fee"></span></div>
                        <div class="mt-1"><strong>Mobile number: </strong> <span id="number"></span></div>
                        <div class="mt-3">
                            <div class="row">
                                <div class="col-6">
                                    <div class="md-form md-outline input-with-post-icon datepicker">
                                        <input placeholder="Select date" type="date" id="date" class="form-control">
                                    </div>
                                </div>
                                <div class="col-6">   
                                    <select class="form-control" id="time">
                                        <option disabled selected required>Select time</option>
                                        <option>09:00 AM</option>
                                        <option>10:00 AM</option>
                                        <option>11:00 AM</option>
                                        <option>12:00 PM</option>
                                        <option>01:00 PM</option>
                                        <option>02:00 PM</option>
                                        <option>03:00 PM</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-sm" id="btnbook">Submit</button>
            </div>
        </div>
    </div>
</div> 