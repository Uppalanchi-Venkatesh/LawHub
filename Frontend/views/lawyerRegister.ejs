<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header') %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="../CSS/login.css">
</head>

<body>
    <div class="register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="">
                <h3>Welcome</h3>
                <p>You are 30 seconds away from earning your own money!</p>
                <a href="/"><input type="submit" name="" value="Homepage"></a><br>
            </div>
            <div class="col-md-9 register-right">
                <ul class="nav nav-tabs nav-justified" id="myTab">
                    <li class="nav-item">
                        <a class="nav-link" href="/clientLogin" aria-selected="true">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/lawyerLogin" aria-selected="true">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/clientRegister" aria-selected="false">Register</a>
                    </li>
                    <% if(typeof user!=='undefined' && user.role==='admin') { %>
                    <li class="nav-item">
                        <a class="nav-link active" href="/lawyerRegister" aria-selected="false">Register</a>
                    </li>
                    <% } %>
                </ul>
                <div class="tab-pane fade show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <form action="/lawyers/register" method="POST">
                        <h3 class="register-heading">Sign up as Lawyer</h3>
                        <div class="row register-form">
                            <div class="col-md-9 m-auto">
                                <%- include('./partials/messages') %>
                                <div class="form-group">
                                    <input type="text" required class="form-control" placeholder="Username*" name="username">
                                </div>
                                <div class="form-group">
                                    <input type="email" required class="form-control" placeholder="Email*" name="email">
                                </div>
                                <div class="form-group">
                                    <input type="password" required class="form-control" placeholder="Password*" name="password">
                                </div>
                                <div class="form-group">
                                    <input type="password" required class="form-control" placeholder="Confirm Password*" name="cpassword">
                                </div>
                                <input type="submit" class="btnRegister" value="Register">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>